@model List<Habilidad>
@{
    ViewBag.Title = "Habilidades obtenidas";
}

<div id="habilidades" class="page">

    <h1 class="page-header remove-margin">
        <a class="btn btn-primary pull-right" href="~/admin/habilidades/crud">Agregar</a>
        Habilidades obtenidas
    </h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Habilidad</th>
                <th>Nivel</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fila in Model)
            {
                <tr>
                    <td>
                        <a href="~/admin/habilidades/crud/@fila.id">@fila.Nombre</a>
                    </td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:@fila.Dominio%;">
                                @fila.Dominio%
                            </div>
                        </div>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="~/admin/habilidades/eliminar/@fila.id">ELiminar</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>