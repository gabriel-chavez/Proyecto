@model List<Testimonio>
@{
    ViewBag.Title = "Testimonios";
    var estados = ViewBag.estados;
}

<div id="testimonios" class="page">

    <h1 class="page-header remove-margin">
        Testimonios
    </h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th>IP</th>
                <th>Fecha</th>
                <th style="width:400px;">Comentario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fila in Model)
            {
                <tr>
                    <td>
                        <a href="~/admin/testimonios/crud/@fila.id">@fila.Nombre</a>
                    </td>
                    <td>
                        @foreach(var x in estados)
                        {
                            if(Convert.ToInt32(x.Valor)==fila.Estado_id)
                            {
                                @x.Descripcion;
                            }
                        }
                    </td>
                    <td>
                        @fila.IP
                    </td>
                    <td>
                        @fila.Fecha
                    </td>
                    <td>
                        @fila.Comentario
                    </td>
                    <td>
                        <a class="btn btn-primary" href="~/admin/testimonios/eliminar/@fila.id">ELiminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

